{
  "name": "jojoo",
  "version": "0.2.0",
  "private": true,
  "description": "A utils for Jotai v2.",
  "author": "Innei",
  "license": "MIT",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Innei/jojoo"
  },
  "files": [
    "**"
  ],
  "type": "module",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache"
    ]
  },
  "bump": {
    "before": [],
    "after": [
      "npm run build",
      "cd dist && npm publish"
    ],
    "publish": false,
    "changelog": true
  },
  "scripts": {
    "prebuild": "rm -rf lib && rm -rf esm",
    "build": "rollup -c rollup.config.ts --configPlugin swc3 --bundleConfigAsCjs",
    "postbuild": "tsx tools/postbuild.ts",
    "prepublishOnly": "npm run build && echo \"This package is not meant to be published from root dir.\" && exit 1",
    "test": "vitest",
    "prepare": "husky install",
    "release": "bump"
  },
  "peerDependencies": {
    "immer": "^10.0.0",
    "jotai": "^2.0.0",
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@innei/bump-version": "1.5.10",
    "@innei/eslint-config-react-ts": "0.13.1",
    "@innei/eslint-config-ts": "0.13.1",
    "@innei/prettier": "0.13.1",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-typescript": "11.1.6",
    "@sukka/listdir": "0.3.1",
    "@swc/core": "1.5.3",
    "@testing-library/jest-dom": "6.4.5",
    "@testing-library/react": "15.0.6",
    "@testing-library/user-event": "14.5.2",
    "@types/fs-extra": "11.0.4",
    "@types/node": "20.12.10",
    "@types/react": "^18.3.1",
    "@unocss/preset-wind": "0.59.4",
    "browserslist": "4.23.0",
    "esbuild": "0.21.0",
    "fs-extra": "11.2.0",
    "husky": "9.0.11",
    "immer": "10.1.1",
    "jotai": "2.8.0",
    "jsdom": "24.0.0",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "react": "^18.3.1",
    "rollup": "4.17.2",
    "rollup-plugin-dts": "6.1.0",
    "rollup-plugin-esbuild": "6.1.1",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-swc3": "0.11.1",
    "tslib": "2.6.2",
    "typescript": "5.4.5",
    "vite": "5.2.11",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.6.0"
  }
}