{
  "compilerOptions": {
    "declaration": true,
    "outDir": "/tmp",
    "jsx": "react-jsx",
    "target": "ES2020",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "types": ["vite/client", "vitest/globals"],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "exclude": [
    "esm/*",
    "build/*",
    "node_modules/*",
    "lib/*",
    "example/*",
    "vitest.config.ts",
    "vite.config.ts"
  ]
}
